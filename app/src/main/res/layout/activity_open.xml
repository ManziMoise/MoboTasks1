<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpenActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="134dp"
        android:text="Open Activity"
        android:textColor="#0E0707"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="52dp"
        android:text="Info:"
        android:textColor="#0E0909"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/editTextInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextInfo"
        android:layout_width="242dp"
        android:layout_height="49dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="enter a link or phone number"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonopen"
        android:layout_width="96dp"
        android:layout_height="65dp"
        android:layout_marginStart="93dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="34dp"
        android:text="Open"
        app:layout_constraintEnd_toStartOf="@+id/buttoncancel2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/buttoncancel2"
        android:layout_width="96dp"
        android:layout_height="65dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="84dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>