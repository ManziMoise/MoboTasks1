<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotifyActivity">

    <Button
        android:id="@+id/buttonnotify"
        android:layout_width="263dp"
        android:layout_height="86dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="72dp"
        android:text="Notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.677" />

    <Button
        android:id="@+id/buttontoast"
        android:layout_width="124dp"
        android:layout_height="79dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="18dp"
        android:text="Toast"
        app:layout_constraintBottom_toTopOf="@+id/buttonnotify"
        app:layout_constraintEnd_toStartOf="@+id/buttondialog"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttondialog"
        android:layout_width="124dp"
        android:layout_height="79dp"
        android:layout_marginTop="261dp"
        android:layout_marginEnd="69dp"
        android:text="Dialog Box"
        app:layout_constraintBottom_toTopOf="@+id/buttonnotify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>